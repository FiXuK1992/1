{%- assign product_form_id = 'product-form-' | append: section.id -%}

<div id="section-{{ section.id }}" class="productdetail-container {{ section.settings.class }} {%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
  <div class="row">
    
    {% liquid
      assign num_column = section.settings.num_column | plus: 0

      if num_column >= 1
        assign _class = "col-" | append: section.settings.width_mobile | append: ' col-lg-' | append: section.settings.width_tablet | append: ' col-xl-' | append: section.settings.width
        echo '<div class="' | append: _class | append: '">'
          for block in section.blocks
            case block.type

            when "product_title"
              if block.settings.block_position == 'column1'
                echo '<h1 class="product__title">'
                  echo product.title | escape
                echo '</h1>'
              endif

            when "product_image_type"  
              if block.settings.gallery_product_image == "classic"
                render'main-product-image-classic', product: product first_3d_model: first_3d_model sectionid: section.id
              elsif block.settings.gallery_product_image == "scroll_fixed"
                render 'main-product-image-scroll_fixed', product: product first_3d_model: first_3d_model sectionid: section.id thumb_position: 'bottom'
              elsif block.settings.gallery_product_image == "left-thumbnails"
                render 'main-product-image-classic', product: product first_3d_model: first_3d_model sectionid: section.id thumb_position: 'left'
              elsif block.settings.gallery_product_image == "right-thumbnails"
                render 'main-product-image-classic', product: product first_3d_model: first_3d_model sectionid: section.id thumb_position: 'right'
              elsif block.settings.gallery_product_image == "slide-layout"
                render 'main-product-image-slide-layout', product: product first_3d_model: first_3d_model sectionid: section.id
              elsif block.settings.gallery_product_image == "slideshow-left"
                render 'main-product-image-slideshow-left', product: product first_3d_model: first_3d_model sectionid: section.id
              elsif block.settings.gallery_product_image == "scroll-fixed-3-columns"
                render 'main-product-image-scroll-fixed-3-columns', product: product first_3d_model: first_3d_model sectionid: section.id
              elsif block.settings.gallery_product_image == "with_video"
                render 'main-product-image-with_video', product: product first_3d_model: first_3d_model sectionid: section.id thumb_position: 'left'            
              endif
              when "product_image"
                if block.settings.block_position == 'column1'
                  render 'product-image-block' product: product settings: block.settings _class: block.settings.class _id: block.id
                endif
                
                when "@app"
                if block.settings.block_position == 'column1'
                  render block
                endif

              when 'product_info'
                if block.settings.block_position == 'column1'
                  render 'product-info-block' product: product settings: block.settings theme_settings: settings
                endif

              when 'text'
                if block.settings.block_position == 'column1'
                  assign _class = 'product__text'
                  if block.settings.text_style == 'uppercase'
                    assign _class = _class | append: ' caption-with-letter-spacing'
                  endif
                  if block.settings.text_style == 'subtitle'
                    assign _class = _class | append: ' subtitle'
                  endif
                  echo '<p class="' | append: _class | append: '">'
                    echo block.settings.text
                  echo '</p>'
                endif

              when 'description'
                if block.settings.block_position == 'column1' and product.description != blank
                  echo '<div class="product__description rte">'
                  echo product.description
                  echo '</div>'
                endif

              when 'tab_description'
                if block.settings.block_position == 'column1'
                  render 'tab_description', product, settings: block.settings
                endif

            endcase
          endfor

        echo '</div>'
      endif

      if num_column >= 2
        assign _class = "col-" | append: section.settings.width_mobile_column_2 | append: ' col-lg-' | append: section.settings.width_tablet_column_2 | append: ' col-xl-' | append: section.settings.width_column_2
        echo '<div class="' | append: _class | append: '">'
          for block in section.blocks
            case block.type
              when "product_title"
              if block.settings.block_position == 'column2'
                echo '<h1 class="product__title">'
                  echo product.title | escape
                echo '</h1>'
              endif

              when "product_image"
                if block.settings.block_position == 'column2'
                  render 'product-image-block' product: product settings: block.settings _class: block.settings.class _id: block.id
                endif


              when "@app"
                if block.settings.block_position == 'column2'
                  render block
                endif
                
              when 'product_info'
                if block.settings.block_position == 'column2'
                  render 'product-info-block' product: product settings: block.settings theme_settings: settings
                endif

              when 'text'
                if block.settings.block_position == 'column2'
                  assign _class = 'product__text'
                  if block.settings.text_style == 'uppercase'
                    assign _class = _class | append: ' caption-with-letter-spacing'
                  endif
                  if block.settings.text_style == 'subtitle'
                    assign _class = _class | append: ' subtitle'
                  endif
                  echo '<p class="' | append: _class | append: '">'
                    echo block.settings.text
                  echo '</p>'
                endif

              when 'description'
                if block.settings.block_position == 'column2' and product.description != blank
                  echo '<div class="product__description rte">'
                  echo product.description
                  echo '</div>'
                endif

              when 'tab_description'
                if block.settings.block_position == 'column2'
                  render 'tab_description', product, settings: block.settings
                endif

            endcase
          endfor
        echo '</div>'
      endif

      if num_column == 3
        assign _class = "col-" | append: section.settings.width_mobile_column_3 | append: ' col-lg-' | append: section.settings.width_tablet_column_3 | append: ' col-xl-' | append: section.settings.width_column_3
        echo '<div class="' | append: _class | append: '">'
          for block in section.blocks
            case block.type
when "product_title"
              if block.settings.block_position == 'column3'
                echo '<h1 class="product__title">'
                  echo product.title | escape
                echo '</h1>'
              endif
              when "product_image"
                if block.settings.block_position == 'column3'
                  render 'product-image-block' product: product settings: block.settings _class: block.settings.class _id: block.id
                endif


              when "@app"
                if block.settings.block_position == 'column3'
                  render block
                endif
                
              when 'product_info'
                if block.settings.block_position == 'column3'
                  render 'product-info-block' product: product settings: block.settings theme_settings: settings
                endif

              when 'text'
                if block.settings.block_position == 'column3'
                  assign _class = 'product__text'
                  if block.settings.text_style == 'uppercase'
                    assign _class = _class | append: ' caption-with-letter-spacing'
                  endif
                  if block.settings.text_style == 'subtitle'
                    assign _class = _class | append: ' subtitle'
                  endif
                  echo '<p class="' | append: _class | append: '">'
                    echo block.settings.text
                  echo '</p>'
                endif

              when 'description'
                if block.settings.block_position == 'column3' and product.description != blank
                  echo '<div class="product__description rte">'
                  echo product.description
                  echo '</div>'
                endif

              when 'tab_description'
                if block.settings.block_position == 'column3'
                  render 'tab_description', product, settings: block.settings
                endif

            endcase
          endfor
        echo '</div>'
      endif

    %}
  
    <div class="bottom-product-detail container">
      {% liquid
        for block in section.blocks
            case block.type
	     when "product_title"
              if block.settings.block_position == 'bottom'
                echo '<h1 class="product__title">'
                  echo product.title | escape
                echo '</h1>'
              endif
	      
              when "product_image"
                if block.settings.block_position == 'bottom'
                  render 'product-image-block' product: product settings: block.settings _class: block.settings.class _id: block.id
                endif

              when "@app"
                if block.settings.block_position == 'bottom'
                  render block
                endif
 
                
              when 'product_info'
                if block.settings.block_position == 'bottom'
                  render 'product-info-block' product: product settings: block.settings theme_settings: settings
                endif

              when 'text'
                if block.settings.block_position == 'bottom'
                  assign _class = 'product__text'
                  if block.settings.text_style == 'uppercase'
                    assign _class = _class | append: ' caption-with-letter-spacing'
                  endif
                  if block.settings.text_style == 'subtitle'
                    assign _class = _class | append: ' subtitle'
                  endif
                  echo '<p class="' | append: _class | append: '">'
                    echo block.settings.text
                  echo '</p>'
                endif

              when 'description'
                if block.settings.block_position == 'bottom' and product.description != blank
                  echo '<div class="product__description rte">'
                  echo product.description
                  echo '</div>'
                endif

              when 'tab_description'
                if block.settings.block_position == 'bottom'
                  render 'tab_description', product, settings: block.settings
                endif

            endcase
          endfor
      %}
    </div>
  </div>
</div>

